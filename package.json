{
  "name": "pokemonbattle",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "copy:html": "node -e \"require('fs').copyFileSync('src/public/index.html', 'dist/public/index.html')\"",
    "copy:css": "node -e \"require('fs-extra').copySync('src/public/css', 'dist/public/css')\"",
    "build": "npm-run-all clean tsc copy:html",
    "connect": "node .",
    "start": "npm-run-all clean tsc copy:html copy:css connect"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  }
}
